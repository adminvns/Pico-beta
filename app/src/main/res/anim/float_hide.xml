<set
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/decelerate_interpolator"
    android:fillAfter ="true" android:fillEnabled="true">
    <scale
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:fromXScale="1.0" android:fromYScale="1.0"
        android:toXScale="1.15"   android:toYScale="1.15"
        android:pivotX="50%"     android:pivotY="50%"
        android:duration="150"   android:fillAfter ="true" android:fillEnabled="true">
    </scale>
    <scale
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:startOffset="150"
        android:fromXScale="1.0" android:fromYScale="1.0"
        android:toXScale="0.9"   android:toYScale="0.9"
        android:pivotX="50%"     android:pivotY="50%"
        android:duration="80"   android:fillAfter ="true" android:fillEnabled="true">
    </scale>
</set>