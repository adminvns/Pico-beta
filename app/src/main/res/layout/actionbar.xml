<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.RevealLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/actionbar">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/mainPanel"
        android:layout_gravity="bottom"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/addbarpane"
            android:layout_alignParentBottom="true"
            android:background="?attr/selectableItemBackground"
            android:drawSelectorOnTop="true"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/menucolor"
                android:paddingStart="45dp"
                android:paddingLeft="45dp"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:selectAllOnFocus="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|start"
                    android:text="@string/HintAdd"
                    android:fontFamily="sans-serif-light"
                    android:paddingTop="2dp"
                    android:singleLine="true"
                    android:id="@+id/Tittle" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:background="@color/menucolor"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/fevicon"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/menucolor"
                android:id="@+id/voicepane"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingEnd="12dp"
                android:paddingRight="12dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/voicecommandout"
                    android:paddingTop="2dp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    style="@style/SelectableItemBackgroundBorderless"
                    android:src="@drawable/stop_loading"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</io.codetail.widget.RevealLinearLayout>